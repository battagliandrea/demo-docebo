<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demodocebo.test">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.demodocebo.test.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">

        <activity
            android:name="com.demodocebo.test.ui.view.splash.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.view.search.SearchActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.view.catalog.CatalogActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>