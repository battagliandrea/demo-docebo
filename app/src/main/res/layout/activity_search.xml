<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dimen_default"
        android:paddingEnd="@dimen/dimen_default">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/dimen_default_quarter"
            android:layout_marginBottom="@dimen/dimen_default_quarter"
            android:paddingStart="@dimen/dimen_default_half"
            android:paddingEnd="@dimen/dimen_default_half"
            android:hint="@string/search_name_item"
            android:background="@drawable/bkg_rect_round_gray_light"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_course"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/dimen_default_quarter"
            android:layout_marginBottom="@dimen/dimen_default_quarter"

            android:paddingStart="@dimen/dimen_default_half"
            android:paddingEnd="@dimen/dimen_default_half"
            android:hint="@string/search_course_item"
            android:background="@drawable/bkg_rect_round_gray_light"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_default"
            android:layout_marginBottom="@dimen/dimen_default"

            android:text="@string/search_button"
            android:textColor="@color/white"
            android:background="@drawable/slt_rect_round_blue"/>

    </LinearLayout>

</LinearLayout>